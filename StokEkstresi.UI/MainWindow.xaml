<Window x:Class="StokEkstresi.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stok Ekstresi" Height="400" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10" VerticalAlignment="Top">
            <StackPanel Margin="0 0 10 0">
                <TextBlock Text="Başlangıç Tarihi" FontWeight="Bold" />
                <DatePicker x:Name="dpStart" Width="130" SelectedDateFormat="Short" />
            </StackPanel>

            <StackPanel Margin="0 0 10 0">
                <TextBlock Text="Bitiş Tarihi" FontWeight="Bold" />
                <DatePicker x:Name="dpFinish" Width="130" SelectedDateFormat="Short" />
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom">
                <Button Content="Listele" Width="100" Click="Listele_Click"/>
            </StackPanel>
        </StackPanel>


        <DataGrid Grid.Row="1" x:Name="dataGrid" AutoGenerateColumns="True"/>
    </Grid>
</Window>
